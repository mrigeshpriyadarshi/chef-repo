# CookBook Name : <%= @cbname %>
# CookBook Version: <%= @cbversion %>
# File Created on :  <%= @ctime %>
# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
<% @reposervers.each do |server| %>
[<%= @repo_name %>-<%= server %>]
name=<%= @description %>
<% unless @url.empty? -%>
baseurl=http://<%= server %>/<%= @url %>
<% end -%>
<% unless  @autorefresh.nil? -%>
autorefresh=<%= @autorefresh %>
<% end -%>
<% if @enabled %>
enabled=<%= @enabled %>
<% end %>
<% if @key %>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/<%= @key %>
<% else %>
gpgcheck=0
<% end %>

<% end %>
